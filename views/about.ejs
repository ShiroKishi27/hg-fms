    <script>
      const subMenu = document.getElementById("subMenu");
      const mobileMenu = document.querySelector(".mobile-menu");
      const navList = document.querySelector(".navigation ul");
      const overlay = document.querySelector(".overlay");
      const logoprof = document.querySelector(".profile-inline");

      mobileMenu.addEventListener("click", () => {
        navList.classList.toggle("active");
        overlay.classList.toggle("active");
      });

      function toggleMenu() {
        subMenu.classList.toggle("active-popup");
      }

      // Close sidebar & submenu when clicking overlay
      overlay.addEventListener("click", () => {
        navList.classList.remove("active");
        overlay.classList.remove("active");
        subMenu.classList.remove("active-popup");
      });

      // Optional: Close submenu if clicking anywhere else on page
      document.addEventListener("click", (e) => {
        if (!subMenu.contains(e.target) && !logoprof.contains(e.target)) {
          subMenu.classList.remove("active-popup");
        }
      });
    </script>

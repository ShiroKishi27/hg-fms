<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Contact Us | HydroGuard</title>
    <link
      rel="shortcut icon"
      href="img/HydroGuard_logo.ico"
      type="image/x-icon"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,400;0,500;0,600;0,700;0,800;0,900;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="css/main.css" />
    <link rel="stylesheet" href="css/contact.css" />
    <link rel="stylesheet" href="css/navbar.css" />
  </head>
  <body>
    <header>
      <div class="logo">
        <div class="img_logo"></div>
        <div class="txt_logo">
          <h2>HydroGuard<br /></h2>
          <h0>Flood Management Suite</h0>
        </div>
      </div>
      <nav class="navigation">
        <ul>
          <li><a href="/home" class="home">Home</a></li>
          <li><a href="/services" class="services">Services</a></li>
          <li><a href="/about" class="about">About</a></li>
          <li><a href="/contacts" class="contact">Contact</a></li>

          <li class="profile-wrapper">
            <div class="profile-inline" onclick="toggleMenu()">
              <img src="img/HydroGuard_logo.png" class="logoprof" />
              <span class="username">USERNAME</span>
            </div>

            <div class="menuprofiles" id="subMenu">
              <div class="submenu">
                <span class="sub-username">Username</span>
                <hr />
                <span class="user-email">email@domain.com</span>
                <a href="#" class="submenu-link">
                  <span class="subMenu-icon"
                    ><ion-icon name="settings"></ion-icon
                  ></span>
                  <p>Settings</p>
                  <span class="submenu-icon">></span>
                </a>
                <a href="#" class="submenu-link">
                  <span class="subMenu-icon"
                    ><ion-icon name="log-out"></ion-icon
                  ></span>
                  <p>Logout</p>
                  <span class="submenu-icon">></span>
                </a>
              </div>
            </div>
          </li>
        </ul>
      </nav>

      <button class="mobile-menu">&#9776;</button>
    </header>
    <div class="overlay"></div>
    <section class="contact-container">
      <h2 class="contact-title">Contact Us</h2>
      <div class="contact-section">
        <div class="contact-socials">
          <h2>Connect With Us</h2>
          <p>
            Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Maecenas
            porttitor congue massa.
          </p>
          <ul>
            <li>
              <a href="#">
                <ion-icon name="logo-github"></ion-icon> github.com/loremipsum
              </a>
            </li>
            <li>
              <a href="#">
                <ion-icon name="logo-linkedin"></ion-icon>
                linkedin.com/in/loremipsum
              </a>
            </li>
            <li>
              <a href="#">
                <ion-icon name="mail"></ion-icon> loremipsum@email.com
              </a>
            </li>
          </ul>
        </div>

        <div class="contact-form">
          <h2 class="form-title">Leave a Message</h2>
          <form action="/">
            <div class="contact-input-box">
              <input type="email" id="name" required />
              <label for="name">Name</label>
              <span class="icon">
                <ion-icon name="person"></ion-icon>
              </span>
            </div>
            <div class="contact-input-box">
              <input type="email" id="email" required />
              <label for="email">Email</label>
              <span class="icon">
                <ion-icon name="mail"></ion-icon>
              </span>
            </div>
            <div class="contact-input-box textarea-box">
              <textarea id="message" rows="5" required></textarea>
              <label for="message">Message</label>
              <span class="icon">
                <ion-icon name="chatbox"></ion-icon>
              </span>
            </div>
            <button type="submit" class="btn">Send</button>
          </form>
        </div>
      </div>
    </section>

    <script type="text/javascript">
      const subMenu = document.getElementById("subMenu");
      const mobileMenu = document.querySelector(".mobile-menu");
      const navList = document.querySelector(".navigation ul");
      const overlay = document.querySelector(".overlay");
      const logoprof = document.querySelector(".profile-inline");

      mobileMenu.addEventListener("click", () => {
        navList.classList.toggle("active");
        overlay.classList.toggle("active");
      });

      function toggleMenu() {
        subMenu.classList.toggle("active-popup");
      }

      // Close sidebar & submenu when clicking overlay
      overlay.addEventListener("click", () => {
        navList.classList.remove("active");
        overlay.classList.remove("active");
        subMenu.classList.remove("active-popup");
      });

      // Optional: Close submenu if clicking anywhere else on page
      document.addEventListener("click", (e) => {
        if (!subMenu.contains(e.target) && !logoprof.contains(e.target)) {
          subMenu.classList.remove("active-popup");
        }
      });
    </script>
    <!-- <script type="module" src="/app.js"> </script> -->
    <script
      type="module"
      src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"
    ></script>
    <script
      nomodule
      src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
  </body>
</html>

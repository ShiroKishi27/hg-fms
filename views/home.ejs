<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>HydroGuard</title>
    <link
      rel="shortcut icon"
      href="img/HydroGuard_logo.ico"
      type="image/x-icon"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,400;0,500;0,600;0,700;0,800;0,900;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="css/main.css" />
    <link rel="stylesheet" href="css/navbar.css" />
  </head>
  <body>
    <header>
      <div class="logo">
        <div class="img_logo"></div>
        <div class="txt_logo">
          <h2>HydroGuard<br /></h2>
          <h0>Flood Management Suite</h0>
        </div>
      </div>
      <nav class="navigation">
        <ul>
          <li><a href="/home" class="home">Home</a></li>
          <li><a href="/services" class="services">Services</a></li>
          <li><a href="/about" class="about">About</a></li>
          <li><a href="/contacts" class="contact">Contact</a></li>

          <li class="profile-wrapper">
            <div class="profile-inline" onclick="toggleMenu()">
              <img src="img/HydroGuard_logo.png" class="logoprof" />
              <span class="username">USERNAME</span>
            </div>

            <div class="menuprofiles" id="subMenu">
              <div class="submenu">
                <span class="sub-username">Username</span>
                <hr />
                <span class="user-email">email@domain.com</span>
                <a href="#" class="submenu-link">
                  <span class="subMenu-icon"
                    ><ion-icon name="settings"></ion-icon
                  ></span>
                  <p>Settings</p>
                  <span class="submenu-icon">></span>
                </a>
                <a href="#" class="submenu-link">
                  <span class="subMenu-icon"
                    ><ion-icon name="log-out"></ion-icon
                  ></span>
                  <p>Logout</p>
                  <span class="submenu-icon">></span>
                </a>
              </div>
            </div>
          </li>
        </ul>
      </nav>

      <button class="mobile-menu">&#9776;</button>
    </header>
    <div class="overlay"></div>
    <section class="maincontent">
      <div class="btn-main-container">
        <button class="btn-main active" data-target="flood-container">
          <ion-icon name="rainy-outline"></ion-icon>
          <span>Rain & Flood</span>
        </button>
        <button class="btn-main" data-target="routes-container">
          <ion-icon name="map-outline"></ion-icon>
          <span>Routes</span>
        </button>
        <button class="btn-main" data-target="household-container">
          <ion-icon name="home-outline"></ion-icon>
          <span>Households</span>
        </button>
      </div>

      <!-- Flood & Rainfall Monitoring -->
      <div class="flood-container active">
        <div class="map-container">
          <div class="search-bar">
            <input
              id="search-flood"
              type="text"
              class="input-search-bar"
              placeholder="Search flood zones"
            />
            <button class="btn-search">ðŸ”Žï¸Ž</button>
          </div>
          <div class="flood-data">
            <h3>Rainfall and Water Level Data</h3>
            <p>Display charts, real-time rainfall map, or sensor data here.</p>
          </div>
        </div>
        <div class="map-routes">
          <h3>Alerts & Updates</h3>
          <p>Show list of rainfall alerts or flood warnings here.</p>
        </div>
      </div>

      <!-- Evacuation Routes -->
      <div class="routes-container">
        <div class="map-container">
          <div class="search-bar">
            <input
              id="search-route"
              type="text"
              class="input-search-bar"
              placeholder="Search location"
            />
            <button class="btn-search">ðŸ”Žï¸Ž</button>
          </div>
        </div>
        <div class="map-routes">
          <div class="search-bar">
            <input
              id="search-routes"
              type="text"
              class="input-search-bar"
              placeholder="Search routes"
            />
            <button class="btn-search">ðŸ”Žï¸Ž</button>
          </div>
        </div>
      </div>

      <!-- Affected Households -->
      <div class="household-container">
        <div class="map-container">
          <h3>List of Affected</h3>
          <ul class="household-list">
            <li>Barangay 1 - 12 households affected</li>
            <li>Barangay 2 - 8 households affected</li>
            <li>Barangay 3 - 5 households affected</li>
          </ul>
        </div>
        <div class="map-routes">
          <h3>Response Actions</h3>
          <p>Rescue status, supply distribution, or assistance updates here.</p>
        </div>
      </div>
    </section>

    <script type="text/javascript">
      const subMenu = document.getElementById("subMenu");
      const mobileMenu = document.querySelector(".mobile-menu");
      const navList = document.querySelector(".navigation ul");
      const overlay = document.querySelector(".overlay");
      const logoprof = document.querySelector(".profile-inline");
      const buttons = document.querySelectorAll(".btn-main");
      const sections = document.querySelectorAll(
        ".flood-container, .routes-container, .household-container"
      );

      mobileMenu.addEventListener("click", () => {
        navList.classList.toggle("active");
        overlay.classList.toggle("active");
      });

      function toggleMenu() {
        subMenu.classList.toggle("active-popup");
      }

      // Close sidebar & submenu when clicking overlay
      overlay.addEventListener("click", () => {
        navList.classList.remove("active");
        overlay.classList.remove("active");
        subMenu.classList.remove("active-popup");
      });

      // Optional: Close submenu if clicking anywhere else on page
      document.addEventListener("click", (e) => {
        if (!subMenu.contains(e.target) && !logoprof.contains(e.target)) {
          subMenu.classList.remove("active-popup");
        }
      });

      buttons.forEach((btn) => {
        btn.addEventListener("click", () => {
          // remove active state
          buttons.forEach((b) => b.classList.remove("active"));
          sections.forEach((s) => s.classList.remove("active"));

          // activate clicked button + target section
          btn.classList.add("active");
          const target = document.querySelector(`.${btn.dataset.target}`);
          target.classList.add("active");
        });
      });
    </script>
    <script
      type="module"
      src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"
    ></script>
    <script
      nomodule
      src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
